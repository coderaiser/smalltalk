{
    "parserOptions": {
        "ecmaVersion": 2021
    },
    "env": {
        "browser": true
    },
    "rules": {
        "node/no-unsupported-features/es-syntax": "off"
    },
    
    "overrides": [{
        "files": ["*.js"],
        "rules": {
            "node/no-unpublished-require": "off"
        }
    }],
    "extends": [
        "plugin:node/recommended",
        "plugin:putout/recommended"
    ],
    "plugins": [
        "node",
        "putout"
    ]
}
